{
    "verbose": false,
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "setupFiles": ["<rootDir>/src/test/setupTests.js"],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "moduleNameMapper": {
        "@/(.*)$": "<rootDir>/src/$1"
    },
    "testURL": "http://localhost",
    "globals": {
        "__OA_BASE_API__": "https://test.api.com",
        "window": {
            "location": {}
        }
    }
}
